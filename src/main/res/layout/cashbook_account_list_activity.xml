<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trade.account.list.AccountListActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glAccountListLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/d15dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glAccountListRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/d15dp"/>
    <ImageView
        android:id="@+id/ivAccountListBack"
        android:layout_width="@dimen/d40dp"
        android:layout_height="@dimen/d40dp"
        android:layout_marginTop="@dimen/d5dp"
        android:src="@drawable/common_back_right_arrow"
        app:layout_constraintStart_toEndOf="@id/glAccountListLeft"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s20sp"
        android:layout_marginStart="@dimen/d10dp"
        android:text="@string/cashbook_activity_title_amount_manager"
        app:layout_constraintTop_toTopOf="@id/ivAccountListBack"
        app:layout_constraintStart_toEndOf="@id/ivAccountListBack"
        app:layout_constraintBottom_toBottomOf="@id/ivAccountListBack"/>
    <TextView
        android:id="@+id/ivAllAmountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s16sp"
        android:layout_marginTop="@dimen/d15dp"
        android:text="@string/cashbook_all_amount"
        app:layout_constraintTop_toBottomOf="@id/ivAccountListBack"
        app:layout_constraintStart_toEndOf="@id/glAccountListLeft"/>
    <TextView
        android:id="@+id/ivAllAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s16sp"
        android:layout_marginStart="@dimen/d10dp"
        app:layout_constraintTop_toTopOf="@id/ivAllAmountName"
        app:layout_constraintBottom_toBottomOf="@id/ivAllAmountName"
        app:layout_constraintStart_toEndOf="@id/ivAllAmountName"
        app:layout_constraintEnd_toStartOf="@id/glAccountListRight"
        tools:text="100000"/>
    <Button
        android:id="@+id/btnAddAccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50dp"
        android:text="+ 添加"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAccountList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/d10dp"
        app:layout_constraintStart_toEndOf="@id/glAccountListLeft"
        app:layout_constraintEnd_toStartOf="@id/glAccountListRight"
        app:layout_constraintTop_toBottomOf="@id/ivAllAmountName"
        app:layout_constraintBottom_toTopOf="@id/btnAddAccount"/>
</androidx.constraintlayout.widget.ConstraintLayout>