<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/d20dp"
    android:paddingStart="@dimen/d10dp"
    tools:background="@color/common_white_F1F0F0">

    <TextView
        android:id="@+id/tvWalletName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/common_black_2B2A2A"
        app:drawableEndCompat="@drawable/common_left_arror"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="花呗" />

    <TextView
        android:id="@+id/tvWalletPayTotal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/d10dp"
        android:textColor="@color/color_grey_7E797B"
        app:layout_constraintStart_toStartOf="@id/tvWalletName"
        app:layout_constraintTop_toBottomOf="@id/tvWalletName"
        tools:text="支 700" />

    <TextView
        android:id="@+id/tvWalletInComeTotal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/d10dp"
        android:textColor="@color/color_grey_7E797B"
        app:layout_constraintStart_toStartOf="@id/tvWalletName"
        app:layout_constraintTop_toBottomOf="@id/tvWalletPayTotal"
        tools:text="收 700" />


    <TextView
        android:id="@+id/etWalletAmount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/d10dp"
        android:textColor="@color/color_grey_7E797B"
        app:layout_constraintStart_toStartOf="@id/tvWalletName"
        app:layout_constraintTop_toBottomOf="@id/tvWalletInComeTotal"
        tools:text="余 -11000" />

</androidx.constraintlayout.widget.ConstraintLayout>