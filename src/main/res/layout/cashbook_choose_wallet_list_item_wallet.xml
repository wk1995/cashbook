<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d60dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:background="@color/common_white_F1F0F0">
    <TextView
        android:id="@+id/tvCurrencyTypeSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d20dp"
        android:textColor="@color/common_black_2B2A2A"
        tools:text="$"/>
    <TextView
        android:id="@+id/tvCurrencyTypeAmount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/common_black_2B2A2A"
        tools:text="1009"/>
    <TextView
        android:id="@+id/tvChooseAccountName"
        android:layout_width="match_parent"
        android:gravity="center_vertical|end"
        android:textColor="@color/common_black_2B2A2A"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/d10dp"
        tools:text="支付宝"/>


</LinearLayout>